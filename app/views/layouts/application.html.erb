<!DOCTYPE html>
<html>
  <head>
    <title>EventBrite</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all' %>
    <%= javascript_include_tag 'application' %>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet">
  </head>

  <body>

  <header>
      <nav class="navbar navbar-dark bg-dark p-4">
        <h2> <%= link_to "EventBrite", root_path, class: "text-light mx-4" %> </h2>
        <form class="form-inline">
          <% if user_signed_in? %>
            <%= link_to "Créer Un Event", root_path, class: "text-light mx-3" %>
            <%= link_to "MoN ProFiL", edit_user_registration_path, class: "text-light btn btn-outline-primary mx-3" %>
            <%= link_to "Déconnexion", destroy_user_session_path, method: :delete, class: "btn btn-outline-warning mx-3" %>
          <% else %>
            <%= link_to "Inscription", new_user_registration_path, class: "text-light btn btn-outline-primary mx-3" %>
            <%= link_to "Connexion", new_user_session_path, class: "btn btn-outline-warning" %>  
          <% end %>
        </form>
      </nav>
    </header>

    <%= yield %>
  </body>
</html>
