<div class="container">
  <div class="row">
    <% Event.all.each do |e| %>
      <div class="col">
        <div class="card mx-auto my-5" style="width: 18rem;">
          <div class="card-body">
            <h5 class="card-title"> <%= e.title %> </h5>
            <h6 class="card-subtitle mb-2 text-success"> <%= e.start_date.strftime('%Y %m %d %H:%M') %> </h6>
            <h6 class="card-subtitle mb-2 text-muted"> <%= e.location %> </h6>
            <h6 class="card-subtitle mb-2 text-muted"> <%= e.duration %> minutes </h6>
            <h6 class="card-subtitle mb-2 text-muted"> Organisateur: <%= e.administrator.first_name %> </h6>
            <p class="card-text"> <%= e.description %> </p>
            <h6 class="card-subtitle mb-2 text-muted"> <%= e.price %> â‚¬  </h6>
            <%= link_to "Voir la fiche", event_path(:id => e.id), class: "btn btn-outline-success my-5 w-100" %>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>